    <ContentPage Title="MENU" IconImageSource="MenuIcon.png">
        <StackLayout>

        </StackLayout>
    </ContentPage>

    <ContentPage Title="REVIEWS" IconImageSource="ReviewIcon.png">
        <StackLayout>

        </StackLayout>
    </ContentPage>

    <ContentPage Title="SCAN" IconImageSource="ScanIcon.png">
        <StackLayout>

