<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"

    xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"

    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    android:TabbedPage.ToolbarPlacement="Bottom"

    x:Class="LogoScanner.RestaurantPage"
    Title="Logo Scanner"
    BackgroundColor="White"
    BarBackgroundColor="White"
    SelectedTabColor="#11a0dc"
    Visual="Material">

    <ContentPage Title="HOME" IconImageSource="HomeIcon.png">
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="25*" />
                    <RowDefinition Height="25*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <maps:Map
                    x:Name="MapArea"
                    MapType="Street"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                >
                    <x:Arguments>
                        <maps:MapSpan>
                            <x:Arguments>
                                <maps:Position>
                                    <x:Arguments>
                                        <x:Double>0</x:Double>
                                        <x:Double>0</x:Double>
                                    </x:Arguments>
                                </maps:Position>
                                <x:Double>0.01</x:Double>
                                <x:Double>0.01</x:Double>
                            </x:Arguments>
                        </maps:MapSpan>
                    </x:Arguments>
                </maps:Map>

                <controls:CircleImage
                    x:Name="Logo"
                    Source="https://via.placeholder.com/300"
                    Aspect="AspectFill"
                    BorderColor="White"
                    BorderThickness="4"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Margin="15, 0"
                >
                    <controls:CircleImage.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android, iOS">120</On>
                        </OnPlatform>
                    </controls:CircleImage.WidthRequest>
                    <controls:CircleImage.HeightRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android, iOS">120</On>
                        </OnPlatform>
                    </controls:CircleImage.HeightRequest>
                </controls:CircleImage>

                <Label
                    x:Name="NameLabel"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="End"
                    Text="Restaurant"
                    Font="Bold, 26"
                    Padding="13, 50, 0, 0"
                    Margin="0, 15, 0, 0"
                />

                <Label
                    x:Name="CuisinesLabel"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Cuisines"
                    FontSize="12"
                    Padding="15, 0"
                />

                <Label
                    x:Name="PriceLabel"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    FontSize="12"
                    Padding="15, 0"
                />

                <Label
                    x:Name="StarLabel"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    FontSize="16"
                    TextColor="#11a0dc"
                    Padding="12, 0"
                />

                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Text="Bookings"
                    FontSize="16"
                />

                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Text="Promotions"
                    FontSize="16"
                />     
            </Grid>

