<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"

    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    android:TabbedPage.ToolbarPlacement="Bottom"

    NavigationPage.HasNavigationBar="false"

    x:Class="LogoScanner.RestaurantPage"
    Title="Logo Scanner"
    BackgroundColor="White"
    BarBackgroundColor="White"
    SelectedTabColor="#11a0dc"
    Visual="Material"
>
    <ContentPage x:Name="HomeTab" Title="Home" IconImageSource="HomeIconFilled.png">
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="18*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="25*" />
                    <RowDefinition Height="25*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <maps:Map
                    x:Name="MapArea"
                    MapType="Street"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3">
                    <x:Arguments>
                        <maps:MapSpan>
                            <x:Arguments>
                                <maps:Position>
                                    <x:Arguments>
                                        <x:Double>0</x:Double>
                                        <x:Double>0</x:Double>
                                    </x:Arguments>
                                </maps:Position>
                                <x:Double>0.01</x:Double>
                                <x:Double>0.01</x:Double>
                            </x:Arguments>
                        </maps:MapSpan>
                    </x:Arguments>
                </maps:Map>

                <controls:CircleImage
                    x:Name="Logo"
                    Source="https://via.placeholder.com/300"
                    Aspect="AspectFill"
                    BorderColor="White"
                    BorderThickness="4"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Margin="15, 0">
                    <controls:CircleImage.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android, iOS">120</On>
                        </OnPlatform>
                    </controls:CircleImage.WidthRequest>
                    <controls:CircleImage.HeightRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android, iOS">120</On>
                        </OnPlatform>
                    </controls:CircleImage.HeightRequest>
                </controls:CircleImage>

                <Image
                    x:Name="ResDiary"
                    Grid.Row="2"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    WidthRequest="130"
                    Margin="0, 5, 0, 0"
                    Source="https://www.resdiary.com/Content/Images/powered-by-resdiary.png" />

                <Label
                    x:Name="NameLabel"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Restaurant"
                    Font="Bold, 28"
                    Padding="13, 40, 0, 0" />

                <Label
                    x:Name="CuisinesLabel"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Cuisines"
                    FontSize="12"
                    Padding="15, 0" />

                <Label
                    x:Name="PriceLabel"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    FontSize="12"
                    Padding="15, 0" />

                <Label
                    x:Name="StarLabel"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    FontSize="16"
                    TextColor="#11a0dc"
                    Padding="12, 0" />

                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Text="Bookings"
                    FontSize="16" />

                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Text="Promotions"
                    FontSize="16"
                    Padding="15, 0" />
                <Grid
                    Grid.Row="7"
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ListView
                        ItemsSource="{Binding Promotions}"
                        x:Name="PromotionsView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout>
                                        <Label Text="{Binding Name}" />
                                        <Label Text= "{Binding Description}" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </StackLayout>
    </ContentPage>

    <ContentPage x:Name="MenuTab" Title="Menu" IconImageSource="MenuIcon.png">
        <StackLayout>
            <Label
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Text="Menu"
                FontSize="16" />
        </StackLayout>
    </ContentPage>

    <ContentPage x:Name="ReviewsTab" Title="Reviews" IconImageSource="ReviewIcon.png" BackgroundColor="White">
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="75*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="1"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Reviews"
                    Font="Bold, 34"
                    Padding="15, 0"
                />

                <ListView
                    Grid.Row="2"
                    ItemsSource="{Binding Reviews}"
                    x:Name="ReviewsView"
                    HasUnevenRows="True"
                    SelectionMode="None"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="{Binding Name}" />
                                    <Label Text= "{Binding Review}" />
                                    <Label Text= "{Binding Date}" />
                                    <Label Text= "{Binding Score}" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </StackLayout>
    </ContentPage>

    <ContentPage x:Name="ScanTab" Title="Scan" IconImageSource="ScanIcon.png">
    </ContentPage>
</TabbedPage>
