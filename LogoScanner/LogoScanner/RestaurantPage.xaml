<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LogoScanner.RestaurantPage"
    Title="Logo Scanner"
    BackgroundColor="White"
    Visual="Material">

    <ContentPage Title="Home">
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="40*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <BoxView
                    BackgroundColor="#11a0dc"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                />

                <Image
                    x:Name="Logo"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    HeightRequest="160"
                    WidthRequest="160"
                    Source="https://via.placeholder.com/300"
                />

                <Label
                    x:Name="NameLabel"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Text="Restaurant Name"
                    Font="Bold, 22"
                />

                <Label
                    x:Name="CuisinesLabel"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Text="Cuisines"
                    FontSize="12"
                />

                <Label
                    x:Name="PriceLabel"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="12"
                />

                <Label
                    x:Name="ReviewsLabel"
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="12"
                />

                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Promotions"
                    FontSize="16"
                />

                <Label
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Availability"
                    FontSize="16"
                />

                <Label
                    Grid.Row="9"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="Reviews"
                    FontSize="16"
                />


              
            </Grid>



